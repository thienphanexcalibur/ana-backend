{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
				"root": ["./"],
				"@": ["./src"],
				"@routes": ["./src/routes"],
				"@controller/*": ["./src/controller/*"],
				"@entity/*": ["./src/entity/*"],
				"@utils": ["./src/utils"]
			}
	},
	"exlude": [
		"node_modules"
	]
}
