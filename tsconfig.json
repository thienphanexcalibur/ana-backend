{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@": [
				"./src/*"
			],
			"@routes": [
				"./src/routes",
				"./src/routes/*"
			],
			"@controller": [
				"./src/controller", "./src/controller/*"
			],
			"@middlewares": [
				"./src/middlewares/*"
			],
			"@entity": [
				"./src/entity",
				"./src/entity/*"
			],
			"@utils": [
				"./src/utils/*"
			]
		}
	},
	"include": [
		"src/**/*.*.ts",
		"src/**/*.ts"
	],
	"exclude": ["node_modules"]
}
