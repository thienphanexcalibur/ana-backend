{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"root": [
				"./"
			],
			"@": [
				"./src"
			],
			"@routes": [
				"./src/routes"
			],
			"@routes/*": ["./src/*"],
			"@controller": [
				"./src/controller"
			],
			"@controller/*": [
				"./src/controller/*"
			],
			"@middlewares": [
				"./src/middlewares"
			],
			"@middlewares/*": [
				"./src/middlewares/*"
			],
			"@entity": [
				"./src/entity"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@utils": [
				"./src/utils"
			]
		}
	}
}
